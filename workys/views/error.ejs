<style>
    .toast {
        z-index: 10000;
        background-color: black;
        color: white;
        border-radius: 0;
    }
    .toast button {
        background-color: black;
        color: white;
        border: 1px solid white;
        transition : .2s ease-in-out;
    }

    .toast button:hover {
        background-color: white;
        color: black;
        border: 1px solid black;
    }

    #toast-wrapper, #toast-wrapper * {
        pointer-events: none
    }
</style>
<% for (const [key, value] of Object.entries(messages)) { %>
    <div id="toast-wrapper" class="w-100 h-100 align-items-start justify-content-center d-flex position-absolute">
        <div class="w-25 h-100">
            <% value.forEach((message) => { %>
                <div class="toast m-3 w-100 position-relative" role="alert" aria-live="assertive" aria-atomic="true">
                    <!--
                    <button type="button" class="m-2 mb-1" data-dismiss="toast" aria-label="Close" onclick="this.parentNode.remove()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    -->
                    <% if(key === 'info') { %>
                        <svg class="m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                        </svg>
                    <% } else if(key === 'success') { %>
                        <svg class="m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    <% } else if(key === 'error') { %>
                        <svg class="m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm-2.715 5.933a.5.5 0 0 1-.183-.683A4.498 4.498 0 0 1 8 9.5a4.5 4.5 0 0 1 3.898 2.25.5.5 0 0 1-.866.5A3.498 3.498 0 0 0 8 10.5a3.498 3.498 0 0 0-3.032 1.75.5.5 0 0 1-.683.183zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z"/>
                        </svg>
                    <% } %>
                    <div class="toast-body">
                        <%= message %>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
<% } %>

<script>
    // Show every toasts
    $('.toast').show();

    // Hide every toasts after 5 seconds
    setTimeout(() => {
        $('.toast').fadeOut(1000, () => {
        })
    }, 5000);
</script>