<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/fichesemploi_list.css"/>
    <title>WORKYS</title>
  </head>
  <body>
    <%- include('../../error.ejs'); %>
    <div id="main_overlay"></div>
    <script type="module" src="/javascripts/index.js"></script>
    <%- include('../../header.ejs'); %>
    <main class="p-3">
        <h1>Editer la fiche de poste</h1>
        <form method="post" action="/recruiter/fichesposte/<%= fiche.id %>/edit" class="m-2 p-2">
            <div class="container">
                <div class="row">
                    <div class="col-sm mx-1 my-2">
                        <h2>Intitulé</h2>
                        <input type="text" name="fp_title" placeholder="Intitulé" value="<%= fiche.title %>" class="w-100"/>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Statut du poste</h2>
                        <input type="text" name="fp_role" placeholder="Statut du poste" value="<%= fiche.status %>" class="w-100"/>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Responsable</h2>
                        <select name="fp_resp" class="w-100">
                            <% members.forEach((member)=> { %>
                                <% var selected = member.id === fiche.responsable ? 'selected' : '';%>
                                <option value="<%= member.id %>" <%= selected %>>
                                    <%= member.name + ' ' + member.surname %>
                                </option>
                            <% }) %>    
                        </select>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Type de métier</h2>
                        <input type="text" name="fp_work_type" placeholder="Type de métier" value="<%= fiche.type %>" class="w-100"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm mx-1 my-2">
                        <h2>Nombre d'heures/semaine</h2>
                        <input type="number" name="fp_workflow" placeholder="Nombre d'heures/semaine" value="<%= fiche.workflow.hours %>" class="w-100"/>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Nombre de jours de vacances</h2>
                        <input type="number" name="fp_dayoff" placeholder="Nombre de jours de vacances" value="<%= fiche.workflow.day_off %>" class="w-100"/>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Salaire Minimum</h2>
                        <input type="number" name="fp_salary_min" placeholder="Salaire min." value="<%= fiche.salary.min_salary %>" class="w-100"/>
                    </div>
                    <div class="col-sm mx-1 my-2">
                        <h2>Salaire Maximum</h2>
                        <input type="number" name="fp_salary_max" placeholder="Salaire max." value="<%= fiche.salary.max_salary %>" class="w-100"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm mx-1 my-2">
                        <h2>Lieu de la mission</h2>
                        <input type="text" name="fp_address" placeholder="Lieu de la mission" value="<%= fiche.address %>" class="w-100"/>
                    </div>
                    <div class="col-sm d-flex flex-row align-items-center justify-content-end">
                        <h2>Télétravail possible ?</h2>
                        <input type="checkbox" name="fp_workaway" class="p-1 m-1"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm mx-1 my-2">
                        <h2>Description de l'offre</h2>
                        <textarea type="text" name="fp_desc" placeholder="Description" class="w-100"><%= fiche.description %></textarea>
                    </div>
                </div>
                <div class="row mx-1">
                    <input type="submit" value="Modifier"/>
                </div>
            </div>
            <input name="fp_workflow_id" type="hidden" value="<%= fiche.workflow.id %>">
            <input name="fp_salary_id" type="hidden" value="<%= fiche.salary.id %>">
        </form> 
    </main>
    <%- include('../../header.ejs'); %>
</body>
</html>