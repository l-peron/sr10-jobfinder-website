<style>
    .toast {
        z-index: 10000;
        background-color: black;
        color: white;
        border-radius: 0;
    }
    .toast button {
        background-color: black;
        color: white;
        border: 1px solid white;
        transition : .2s ease-in-out;
    }

    .toast button:hover {
        background-color: white;
        color: black;
        border: 1px solid black;
    }
</style>

<% console.log(messages) %>
<% for (const [key, value] of Object.entries(messages)) { %>
    <div class="w-100 h-100 align-items-start justify-content-center d-flex">
        <div class="w-25 h-100">
            <div class="toast m-3 w-100 position-relative" role="alert" aria-live="assertive" aria-atomic="true">
                <button type="button" class="m-2 mb-1" data-dismiss="toast" aria-label="Close" onclick="this.parentNode.remove()">
                    <span aria-hidden="true">&times;</span>
                </button>
                <% if(key === 'info') { %>
                    <svg class="position-absolute top-0 end-0 m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                    </svg>
                <% } else if(key === 'success') { %>
                    <svg class="position-absolute top-0 end-0 m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                <% } else if(key === 'error') { %>
                    <svg class="position-absolute top-0 end-0 m-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon-fill" viewBox="0 0 16 16">
                        <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"/>
                    </svg>
                <% } %>
                <div class="toast-body">
                    <%= value %>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    // Show every toasts
    $('.toast').show();

    // Hide every toasts after 5 seconds
    setTimeout(() => {
        $('.toast').fadeOut(1000, () => {
        })
    }, 5000);
</script>